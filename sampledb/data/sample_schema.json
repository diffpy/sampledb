{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Sample",
    "type": "object",
    "required": ["uid", "sample_name", "phase_info",
        "sample-name_of_sample_background", "sample_maker", "project"],
    "properties": {
        "uid": {"type" : ["number", "string"]},
        "sample_name": {"type" : "string"},
        "phase_info": {"type" : ["string", "array"]},
        "sample-name_of_sample_background": {"type" : "string",
            "default" : "air"},
        "sample_maker": {"type" : "string"},
        "quantity": {"type" : "string",
            "description": "Weight or volume. Specify units, e.g. mg, mL."},
        "disposition": {"type": "string",
            "default" : "Returned to Home Institution",
            "enum" : ["Returned to Home Institution",
                      "Disposed as Waste at User Facility",
                      "Consumed/Used"]},
        "transport": {"type": "string",
            "default" : "Automobile",
            "enum" : ["Automobile",
                      "Ship by Common Carrier",
                      "Resident Material"]},
        "properties": {"type": "string"},
        "task_and_hazard_analysis": {"type": "string"},
        "project": {"type": "string"}
   },
   "order": ["uid", "sample_name", "phase_info",
             "sample-name_of_sample_background", "project", "sample_maker",
             "quantity", "disposition", "transport", "properties",
             "task_and_hazard_analysis"]
}
