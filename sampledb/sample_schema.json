{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Sample",
    "type": "object",
    "required": ["uid", "sample_name", "phase_info",
        "sample-name_of_sample_background", "sample_maker"],
    "properties": {
        "uid": {"type" : ["number", "string"]},
        "sample_name": {"type" : "string"},
        "phase_info": {"type" : ["string", "array"]},
        "sample-name_of_sample_background": {"type" : "string",
            "default" : "air"},
        "sample_maker": {"type" : "string"},
        "quantity": {"type" : "number"},
        "disposition": {"type": "string"},
        "transport": {"type": "string"},
        "properties": {"type": "string"},
        "task_and_hazard_analysis": {"type": "string"}
    }
}
